doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    title= (title ? title + ' - ' : '') + site.title

    link(rel='stylesheet' href= site.baseurl + '/css/main.css')

    //- for highlight.js
    link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.9.0/styles/tomorrow.min.css')



  body
    header.site-header
      div.wrap
        a.site-title(href= site.baseurl)= site.title

    div.page-content
      div.wrap
        block content
          != contents


    div.wrap
      div.site-footer
        p &nbsp;